{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "g++",
            "command": "g++",
            "isShellCommand": true,
            "showOutput": "silent",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "-g",
                "${file}",
                "-o",
                "${file}.exe"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "编译运行C/C++(外部窗口)",
            "command": "",
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "g++ -g -Wall -std=c++11 ${file} -o ${file}.exe -O2 && start cmd /c \"${file}.exe & pause && del /Q ${file}.exe\""
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative","/"//不应该相对于${workspaceRoot}
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$", //文件在Code文件夹下 只截取文件名部分 不截取全路径
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "编译运行C/C++(内部窗口)",
            "command": "",
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": false,
            "suppressTaskName": false,
            "args": [
                "g++ -g -Wall ${file} -o ${file}.exe -O2 && ${file}.exe && del /Q ${file}.exe"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative","/"//不应该相对于${workspaceRoot}
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$", //文件在Code文件夹下 只截取文件名部分 不截取全路径
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "编译Python",
            "command": "",
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "start cmd /c \"python ${file} & pause\""
            ] // 编译命令参数
        },
        {
            "taskName": "echo",
            "command": "echo",
            "isShellCommand": true,
            "showOutput": "silent",
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "echo",
                "${workspaceRoot}/.vscode/.clang-format"
            ] // 编译命令参数
        }
    ]
}